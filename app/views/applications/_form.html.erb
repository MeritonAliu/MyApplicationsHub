

<%= form_with(model: application) do |form| %>
  <% if application.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(application.errors.count, "error") %> prohibited this application from being saved:</h2>

      <ul>
        <% application.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<div class="newForm">
    <div>
      <%= form.label :name, style: "display: block" %>
      <%= form.text_field :name %>
    </div>

    <div>
      <%= form.label :location, style: "display: block" %>
      <%= form.text_area :location %>
    </div>

        <div>
      <%= form.label :description, style: "display: block" %>
      <%= form.text_area :description %>
    </div>

    <div>
      <%= form.label :company, style: "display: block" %>
      <%= form.text_field :company %>
    </div>

    <div>
      <%= form.label :status, style: "display: block" %>
      <%= form.select :status, Application.statuses.keys.map { |status| [status.titleize, status] }, { include_blank: 'Select Status' } %>
    </div>
      <%= form.submit %>
    </div>
  <% end %>
</div>